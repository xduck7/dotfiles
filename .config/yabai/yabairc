#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
yabai -m signal --add event=window_created action="~/.config/yabai/scripts/float_and_center_if_alone.sh"

# yabai -m config external_bar all:40:0 \
#     menubar_opacity 1 \
#     mouse_follows_focus off \
#     focus_follows_mouse off \
#     window_zoom_persist off \
#     window_placement second_child \
#     window_shadow float \
#     window_opacity off \
#     window_opacity_duration 0.3 \
#     active_window_opacity 1.0 \
#     normal_window_opacity 1.0 \
#     window_animation_duration 0.25 \
#     window_animation_easing ease_out_expo ease_in_sine \
#     insert_feedback_color 0xffb85944 \
#     auto_balance on \
#     mouse_modifier fn \
#     mouse_action1 move \
#     mouse_action2 resize \
#     mouse_drop_action swap \
#     top_padding 10 \
#     bottom_padding 15 \
#     left_padding 15 \
#     right_padding 15 \
#     window_gap 15


# Space Naming
yabai -m space 1 --label "Browser"      # 1
yabai -m space 2 --label "Code"         # 2
yabai -m space 3 --label "Database"     # 3
yabai -m space 4 --label "API"          # 4
yabai -m space 5 --label "Docker"       # 5
yabai -m space 6 --label "Communication" # Q
yabai -m space 7 --label "Notes"        # W
yabai -m space 8 --label "Terminal"     # E
yabai -m space 9 --label "Other A"        # A
yabai -m space 10 --label "Other S"       # S
yabai -m space 11 --label "Other D"      # D
yabai -m space 12 --label "Other F"        # F

# Set all padding and gaps to 20pt (default: 0)
yabai -m config top_padding 20 
yabai -m config bottom_padding 20
yabai -m config left_padding 20
yabai -m config right_padding 20
yabai -m config window_gap 5

# Window Borders (подсветка активного окна)
yabai -m config window_border on                  # Включить границы окон
yabai -m config window_border_width 2            # Толщина границы (в пикселях)
yabai -m config active_window_border_color 0xFF75B5FF  # Цвет активного окна (голубой, ARGB)
yabai -m config normal_window_border_color 0x55555555  # Цвет неактивных окон (серый, полупрозрачный)
yabai -m config window_border_radius 8           # Закругление углов (опционально)

# Exclude problematic apps from being managed:
yabai -m rule --add app="^(Outline|LuLu|Calculator|Software Update|Dictionary|VLC|System Preferences|System Settings|zoom.us|Photo Booth|Archive Utility|Python|LibreOffice|App Store|Alfred|Activity Monitor|OpenVPN Connect|Finder)$" manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add label="Select file to save to" app="^Inkscape$" title="Select file to save to" manage=off

yabai -m config layout bsp

# yabai -m config --space 2 layout float

# Отключаем управление подокнами с заголовками, например, панелями
yabai -m rule --add app="^GoLand$" title=".*Tool Window.*" manage=off
yabai -m rule --add app="^RustRover$" title=".*Tool Window.*" manage=off

# Управляем только главным окном GoLand
yabai -m rule --add app="^GoLand$" manage=on
yabai -m rule --add app="^RustRover$" manage=on


echo "yabai configuration loaded.."
